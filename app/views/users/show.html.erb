<% provide(:title, @user.name) %>
<div class="row">
<h1>
  <%= @user.name %>
  <%= image_tag @user.avatar.url(:medium) %>
</h1>
<div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>  