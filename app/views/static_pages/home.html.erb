<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
  
<div class="col-md-6">
<div class="fixed">
<div class="col-md-6">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      </div>
      <div class="col-md-6">
      <section>
        <%= link_to current_user.name, current_user %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
      </div>
  </div>
  </div>
  <div class="col-md-6">
  <div class="feed_bord">
      <%= render 'shared/feed' %>
      </div>
  </div>
  </div>

<% else %>
<div class="row">
  <% @microposts.each do |micropost| %>
  
  <div class="col-sm-6 col-md-4">
  <div class="posrbord">
  <span class="postusername">Posted by <%= micropost.user.name %></span></br>
  <section>
        <%= image_tag micropost.image.url(:medium), :class => 'img-thumbnail' %> 
      </section>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  </div>
</div>

  <% end %>
  </div>
<% end %>
